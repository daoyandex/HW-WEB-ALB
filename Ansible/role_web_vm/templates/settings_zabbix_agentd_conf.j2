#!/bin/sh



sudo sed -i 's/Server=127.0.0.1/Server=zabbix-server.ru-central1.internal, 172.16.0.0\/16/g' /etc/zabbix/zabbix_agentd.conf
sudo sed -i 's/ServerActive=127.0.0.1/ServerActive=zabbix-server.ru-central1.internal/g' /etc/zabbix/zabbix_agentd.conf
sudo sed -i 's/# ListenPort=10050/ListenPort=10050/g' /etc/zabbix/zabbix_agentd.conf
sudo sed -i 's/Hostname=Zabbix server/Hostname={{ ansible_nodename }}/g' /etc/zabbix/zabbix_agentd.conf

sudo service zabbix-agent restart